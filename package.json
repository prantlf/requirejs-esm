{
  "name": "requirejs-esm",
  "version": "1.0.1",
  "description": "A RequireJS plugin converting JavaScript modules from ESM to AMD.",
  "author": "Ferdinand Prantl <prantlf@gmail.com>",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/requirejs-esm/blob/master/LICENSE"
    }
  ],
  "homepage": "https://github.com/prantlf/requirejs-esm#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/requirejs-esm.git"
  },
  "bugs": {
    "url": "https://github.com/prantlf/requirejs-esm/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "main": "dist/plugin.js",
  "bin": {
    "esm2requirejs": "bin/esm2requirejs.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build && npm run demo",
    "build": "node build",
    "demo": "npm run optimize && npm run minify",
    "optimize": "r.js -o demo/build.config.js",
    "minify": "terser -cm --ecma 2018 --comments false --source-map content=demo/main-built.js.map --source-map includeSources --source-map url=main-built.min.js.map -o demo/main-built.min.js demo/main-built.js",
    "lint": "eslint -c .eslintrc.browser.yml src && eslint -c .eslintrc.node.yml *.js perf/*.js bin 'test/*.js'",
    "check": "tehanu test/*.js",
    "cover": "c8 node test && c8 --no-clean ./bin/esm2requirejs.js && c8 --no-clean ./bin/esm2requirejs.js test/input/esm-import-all.js && c8 --no-clean ./bin/esm2requirejs.js dummy || c8 report -r text -r lcov | grep -Ev '(\\.\\.\\.)|(index.mjs)|(source-map.js)|(base64-vlq.js)|(base64.js)|(binary-search.js)|(mapping-list.js)|(read-wasm-browser.js)|(url-browser.js)|(wasm.js)|(regexes.js)|(public-api.js)|(All files)'",
    "test": "npm run lint && npm run cover"
  },
  "tehanu": {
    "autostart": false
  },
  "c8": {
    "include": [
      "bin/*",
      "src/**",
      "dist/*"
    ],
    "excludeNodeModules": true,
    "exclude": [
      "node_modules/**"
    ],
    "reporter": [],
    "branches": 65,
    "lines": 85,
    "functions": 95,
    "statements": 80
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@prantlf/convert-source-map": "^2.0.0",
    "@prantlf/requirejs": "^2.4.8",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "astring": "^1.8.1",
    "c8": "^7.11.0",
    "charcodes": "^0.2.0",
    "connect": "^3.7.0",
    "connect-block-favicon": "^1.0.4",
    "escodegen": "^2.0.0",
    "eslint": "^8.9.0",
    "lit-html": "^1",
    "meriyah": "^4.2.0",
    "rollup": "^2.67.3",
    "serve-static": "^1.14.2",
    "source-map": "^0.8.0-beta.0",
    "tehanu": "^0.2.1",
    "tehanu-repo-coco": "^0.0.2",
    "tehanu-teru": "^0.2.2",
    "terser": "^5.10.0"
  },
  "optionalDependencies": {
    "@babel/standalone": "^7.17.5",
    "babel-plugin-transform-modules-requirejs-babel": "^0.1.0",
    "benchmark": "^2.1.4",
    "filesize": "^8.0.7",
    "requirejs-babel7": "^1.3.2"
  },
  "keywords": [
    "requirejs-plugin",
    "requirejs",
    "plugin",
    "amd",
    "esm",
    "es6"
  ],
  "dependencies": {
    "commander": "^9.0.0",
    "tiny-glob": "^0.2.9"
  }
}
